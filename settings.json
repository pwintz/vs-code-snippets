    // ╭───────────────────────────────────────────────────╮
    // │             LaTeX Workshop PDF Viewer             │
    // ╰───────────────────────────────────────────────────╯
    "latex-workshop.synctex.indicator": "circle",
    "latex-workshop.view.outline.floats.caption.enabled": false,
    "latex-workshop.view.outline.sync.viewer": true,
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#809080",
    "latex-workshop.view.pdf.color.dark.pageBorderColor": "#809080",
    "latex-workshop.view.pdf.color.light.backgroundColor": "#809080",
    "latex-workshop.view.pdf.color.light.pageBorderColor": "#809080",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.view.pdf.invertMode.brightness": 0,
    "latex-workshop.view.pdf.toolbar.hide.timeout": 0.4,
    "latex-workshop.view.pdf.viewer": "tab",
    "livePreview.autoRefreshPreview": "On Changes to Saved Files",
    "livePreview.openPreviewTarget": "External Browser",
    "ltex.additionalRules.enablePickyRules": true,
    "ltex.bibtex.fields": {
        "abstract": false
    },
    // "ltex.enabled": [
    //     "bibtex",
    //     "context",
    //     "context.tex",
    //     "html",
    //     "latex",
    //     "markdown"
    // ],
    "ltex.latex.commands": {
        "\\cite{}": "ignore",
        "\\code{}": "ignore",
        "\\lstinputlisting{}": "ignore",
        "\\nocite{}": "ignore",
        "\\problem{}": "ignore",
        "\\subproblem{}": "ignore"
    },
    "ltex.statusBarItem": true,
    // ╭──────────────────────────────────────────────────╮
    // │ ╭──────────────────────────────────────────────╮ │
    // │ │             Past Image Extension             │ │
    // │ ╰──────────────────────────────────────────────╯ │
    // ╰──────────────────────────────────────────────────╯
    "pasteImage.basePath": "${currentFileDir}/THIS_ISNT_USED?",
    "pasteImage.encodePath": "none",
    "pasteImage.filePathConfirmInputBoxMode": "onlyName",
    "pasteImage.insertPattern": "\\includegraphics{pasted-images/${imageFileName}}",
    "pasteImage.path": "${currentFileDir}/pasted-images",
    "pasteImage.prefix": "\\includegraphics[]{",
    "pasteImage.suffix": "}",
    "remote.autoForwardPortsSource": "hybrid",
    "security.allowedUNCHosts": [
        "wsl.localhost",
        "wsl$"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "tabout.charactersToTabOutFrom": [
        {
            "close": "]",
            "open": "["
        },
        {
            "close": "}",
            "open": "{"
        },
        {
            "close": ")",
            "open": "("
        },
        {
            "close": "'",
            "open": "'"
        },
        {
            "close": "\"",
            "open": "\""
        },
        {
            "close": ">",
            "open": "<"
        },
        {
            "close": "`",
            "open": "`"
        },
    ],
    // ╭──────────────────────────────────────╮
    // │ ╭──────────────────────────────────╮ │
    // │ │             Terminal             │ │
    // │ ╰──────────────────────────────────╯ │
    // ╰──────────────────────────────────────╯
    "terminal.explorerKind": "external",
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
    "terminal.integrated.commandsToSkipShell": [
        "matlab.interrupt"
    ],
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.env.windows": {},
    "terminal.integrated.fastScrollSensitivity": 10,
    "terminal.integrated.tabs.title": "${process}: ${cwd}",
    // ╭───────────────────────────────────────────╮
    // │ ╭───────────────────────────────────────╮ │
    // │ │             Editor Window             │ │
    // │ ╰───────────────────────────────────────╯ │
    // ╰──────────────────────────────────────────────────╯
    "window.density.editorTabHeight": "compact",
    "window.openFoldersInNewWindow": "on",
    "workbench.editor.alwaysShowEditorActions": true,
    // Make double clicking a tab make the editor file the window, instead of just shrinking the other editors.
    "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
    // Open documents as "previews" that are replaced by the next document opened unless the file is double clicked.
    "workbench.editor.enablePreview": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    // ╭─────────────────────────────────────────╮
    // │ ╭─────────────────────────────────────╮ │
    // │ │             Color Theme             │ │
    // │ ╰─────────────────────────────────────╯ │
    // ╰─────────────────────────────────────────╯
    "workbench.colorTheme": "Tomorrow Night Bright",
    "workbench.preferredDarkColorTheme": "Tomorrow Night Bright",
    "workbench.preferredHighContrastColorTheme": "GitHub Light High Contrast",
    "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
    "workbench.preferredLightColorTheme": "GitHub Light High Contrast",
    "window.autoDetectHighContrast": false,
    // ╭───────────────────────────────────╮
    // │ ╭───────────────────────────────╮ │
    // │ │             Misc.             │ │
    // │ ╰───────────────────────────────╯ │
    // ╰───────────────────────────────────╯
    "telemetry.telemetryLevel": "error", // Don't send general usage data to big daddy Microsoft.
