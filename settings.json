    // Turn off automatically restarting builds on failure, since that rarely works.
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.clean.subfolder.enabled": true,
    // ⋘────────── Set the LaTeX output folder ──────────⋙
    "latex-workshop.latex.outDir": "%DIR%/out_dir",
    "overleaf-workshop.compileOutputFolderName": "out_dir",
